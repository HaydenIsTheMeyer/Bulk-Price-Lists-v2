@model Bulk_Price_Lists_v2.Models.UpdateResultViewModel

@{
    ViewData["Title"] = "Update Result";
}

<div class="container mt-5">
    <h2 class="text-center text-primary">Update Result</h2>

    <div class="row mb-4">
        <div class="col-12 text-center">
            @if (Model.Success)
            {
                <h4 class="text-success fw-bold">Update Successful</h4>
            }
            else
            {
                <h4 class="text-danger fw-bold">Update Failed</h4>
                <p>@Model.ErrorMessage</p>
            }
        </div>
    </div>

    @if (Model.Success && Model.UpdatedCustomers.Any())
    {
        <div class="row">
            <div class="col-12">
                <h4 class="text-muted">Updated Customers</h4>
                <table class="table table-bordered table-hover table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Customer Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.UpdatedCustomers)
                        {
                            <tr>
                                <td>@customer.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Price List Management</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7fb;
            color: #333;
        }

        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #2c3e50;
        }

        .text-success {
            color: #28a745;
        }

        .text-danger {
            color: #dc3545;
        }

        .fw-bold {
            font-weight: bold;
        }

        .text-muted {
            color: #aaa;
        }

        .btn-primary {
            background-color: #3498db;
            color: white;
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2980b9;
            }

        .table {
            background-color: #fff;
            border-radius: 8px;
            border: 1px solid #ddd;
            margin-top: 20px;
        }

            .table th, .table td {
                padding: 12px;
                text-align: left;
            }

        .thead-light {
            background-color: #f1f3f5;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f3f5;
        }
    </style>
}